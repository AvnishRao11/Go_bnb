<% layout("./layouts/boilerplate")%> 
<div class="row mt-3">
    <div class="col-8 offset-2">
    <h4>Editing this List</h4>
    <form action="/listings/<%=listing._id%>?_method=PUT" method="POST" class="needs-validation"novalidate enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" name="listing[title]" value="<%=listing.title%>" required>
            <div class="invalid-feedback">Enter Valid Title</div>
            <div class="valid-feedback">Looks Good</div>
        </div>
        <div>
            <label for="description" class="form-label">Description</label>
            <textarea  class="form-control" name="listing[description]" required><%=listing.description%>re</textarea>
            <div class="invalid-feedback">Enter Short Description</div>
        </div>
        
        <div class="mb-3">
            Original Listing Image </br>
            <img src="<%=originalImageUrl%>%>"class="img-thumbnail" height="300px" width="300px">
        </div>

        <div>
            <label for="URL" class="form-label"> Upload New Image </label>
            <input type="file"  class="form-control" name="listing[image]"  value="<%=listing.image.url%>">
        </div>

        <div class="row">
            <div class="col-md-4">
                <label for="price" class="form-label">Price</label>
                <input type="number"  class="form-control" name="listing[price]" required value="<%=listing.price%>">
                <div class="invalid-feedback">Enter Valid Price</div>
            </div>
            <div class="col-md-8">
                <label for="country" class="form-label">Country</label>
                <input type="text"  class="form-control" name="listing[country]" required value="<%=listing.country%>">
                <div class="invalid-feedback">Enter Valid Country</div>
            </div>

        </div>
        
        <div>
            <label for="location" class="form-label">Location</label>
            <input type="text"  class="form-control" name="listing[location]" required value="<%=listing.location%>"> 
            <div class="invalid-feedback">Enter Valid Location</div>
        </div>
        <button class="btn mt-3 btn-dark edit-btn">Edit</button>
    </form>
    </div>
</div>