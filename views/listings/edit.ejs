<% layout("./layouts/boilerplate")%> 
<div class="row mt-3">
    <div class="col-8 offset-2">
    <h4>Editing this List</h4>
    <form action="/listings/<%=listing._id%>?_method=PUT" method="POST" class="needs-validation"novalidate>
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" name="listing[title]" value="<%=listing.title%>" required>
            <div class="invalid-feedback">Enter Valid Title</div>
            <div class="valid-feedback">Looks Good</div>
        </div>
        <div>
            <label for="description" class="form-label">Description</label>
            <textarea  class="form-control" name="listing[description]" required><%=listing.description%>re</textarea>
            <div class="invalid-feedback">Enter Short Description</div>
        </div>
        <div>
            <label for="URL" class="form-label">Link/URL</label>
            <input type="text"  class="form-control" name="listing[image][url]" required value="<%=listing.image.url%>">
            <div class="invalid-feedback">Enter Valid URL</div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <label for="price" class="form-label">Price</label>
                <input type="number"  class="form-control" name="listing[price]" required value="<%=listing.price%>">
                <div class="invalid-feedback">Enter Valid Price</div>
            </div>
            <div class="col-md-8">
                <label for="country" class="form-label">Country</label>
                <input type="text"  class="form-control" name="listing[country]" required value="<%=listing.country%>">
                <div class="invalid-feedback">Enter Valid Country</div>
            </div>

        </div>
        
        <div>
            <label for="location" class="form-label">Location</label>
            <input type="text"  class="form-control" name="listing[location]" required value="<%=listing.location%>"> 
            <div class="invalid-feedback">Enter Valid Location</div>
        </div>
        <button class="btn mt-3 btn-dark edit-btn">Edit</button>
    </form>
    </div>
</div>